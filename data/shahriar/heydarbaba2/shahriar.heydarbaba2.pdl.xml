  <text>
    <body>
      <div n="urn:cts:perslit:shahriar.heydarbaba2.pdl" type="edition" xml:lang="per">
        <l n="1">
          <seg n="a"> حیدربابا گلدیم سنى یوخلیام</seg>
          <seg n="b">بیر ده یاتام قوجاغوندا یوخلیام</seg>
        </l>
        <l n="2">
          <seg n="a">اوشاقلیغا دیم بیزه گلسن بیر</seg>
          <seg n="b">آیدین گونلر آغلار یوزه گلسن بیر</seg>
        </l>
        <l n="3">
          <seg n="a">حیدربابا چکدون منى گتیردون</seg>
          <seg n="b">یوردوموزا، یوامیزا یتیردون</seg>
        </l>
        <l n="4">
          <seg n="a">قوجا یعقوب ایتمیشسمده تاپوپسان</seg>
          <seg n="b">قاوالیوب قورد آغزینان قاپوپسان</seg>
        </l>
        <l n="5">
          <seg n="a">گدنلرین یرى بوردا گورونور</seg>
          <seg n="b">خانم ننم آغ کفنین بورونور</seg>
        </l>
        <l n="6">
          <seg n="a">بالا گلدون، نیه بله گژ گلدون؟</seg>
          <seg n="b">صبریم سنن گوژلشدى سن گوژ گلدون</seg>
        </l>
        <l n="7">
          <seg n="a">من گؤردوگوم کروان چاتوپ کؤچیپدى</seg>
          <seg n="b">آیریلیغن شربتینى ایچیپدى</seg>
        </l>
        <l n="8">
          <seg n="a">گچیپ گدیپ گدر گلمز یولارا</seg>
          <seg n="b">توزى قونوپ بو داشلارا کولارا</seg>
        </l>
        <l n="9">
          <seg n="a">بوردا شیرین خاطره لر یاتوپلار</seg>
          <seg n="b">داشلاریلان باشى باشا چاتوپلار</seg>
        </l>
        <l n="10">
          <seg n="a">من باخاندا قاوزانیللار باخیللار</seg>
          <seg n="b">بیرده یاتوپ یاندریلار یاخیللار</seg>
        </l>
        <l n="11">
          <seg n="a"> قبیله میز بوردا قوروپ اجاغى</seg>
          <seg n="b">ایندى اولموش قورد قوشلارون یاتاغى</seg>
        </l>
        <l n="12">
          <seg n="a">و بلدت لیس لها انیسٌ</seg>
          <seg n="b">الا الیعافیر و الا العیسٌ</seg>
        </l>
        <l n="13">
          <seg n="a">زمان گچیر افق لرده توز قالیر</seg>
          <seg n="b">کروان کیمى اوزاقلاردا توز سالیر</seg>
        </l>
        <l n="14">
          <seg n="a">یورک دیر زمان کچمه، آمان دور</seg>
          <seg n="b">کچنلرده گوزوم وار بیر دایان ، دور</seg>
        </l>
        <l n="15">
          <seg n="a"> روزگارین دگیرمانى فیرلانیر</seg>
          <seg n="b">مخلوق اونون دیشلرینه تولانیر</seg>
        </l>
        <l n="16">
          <seg n="a">همیشه لیک شادلیق بیلیر اؤزینه</seg>
          <seg n="b">قبرى گؤرور توز قوندورمور یوزینه</seg>
        </l>
        <l n="17">
          <seg n="a">کهنه لرین سور سموکى دارتلوپ</seg>
          <seg n="b">قورتولانون چول چوخاسى یرتلوپ</seg>
        </l>
        <l n="18">
          <seg n="a">شیخ الاسلام سهمان قالوپ قبراخدى</seg>
          <seg n="b">نوروز على قاچاق گچیپ قوچاخدى</seg>
        </l>
        <l n="19">
          <seg n="a"> عاهیلارون یتمش کفن چورودوپ</seg>
          <seg n="b">جاهیلارى دنیا غمى کریدوپ</seg>
        </l>
        <l n="20">
          <seg n="a">رخشندهنین نوه دوتور الینى</seg>
          <seg n="b">ننه قزین کورکنى گلینى</seg>
        </l>
        <l n="21">
          <seg n="a"> چوق شکرى وار، گنه گلدوخ گوروشدوخ</seg>
          <seg n="b">ایتنلردن بیتنلردن سوروشدوخ</seg>
        </l>
        <l n="22">
          <seg n="a">بیرده گوروش قسمت اولا، اولمیه</seg>
          <seg n="b">عمرلرده فرصت اولا، اولمیه</seg>
        </l>
        <l n="23">
          <seg n="a">بوردا خیال میدانلارى گنیشدى</seg>
          <seg n="b">داغلار داشلار بوتون منله تانیشدى</seg>
        </l>
        <l n="24">
          <seg n="a">بو نه سسدر سن عالمه سالوپسان</seg>
          <seg n="b">گل بیر گورک اوزون هاردا قالوپسان</seg>
        </l>
        <l n="25">
          <seg n="a">کجاویله بو چایدان چوق گچمیشیک</seg>
          <seg n="b">بو چشمه لردن نه سولار ایچمیشیک</seg>
        </l>
        <l n="26">
          <seg n="a">چپیشلرى قیدیخلیان گونلریم</seg>
          <seg n="b">چپیش کیمى اویناخلیان گونلریم</seg>
        </l>
        <l n="27">
          <seg n="a"> بو خرمنده آرادان خیر اویناردیخ</seg>
          <seg n="b">جومالاشوب قاریشقا تک قایناردیخ</seg>
        </l>
        <l n="28">
          <seg n="a">آغاجلاردان چلینک آغاج کسردیک</seg>
          <seg n="b">قوروخجونون قورخوسوندان اسردیک</seg>
        </l>
        <l n="29">
          <seg n="a"> بو طوله ده سارى اینک دوغاردى</seg>
          <seg n="b">خانم نم اینکلرى ساغاردى</seg>
        </l>
        <l n="30">
          <seg n="a">من بزوى قوجاقلاردیم قاشماسین</seg>
          <seg n="b">دیردى باخ بایدا دولسین داشماسین</seg>
        </l>
        <l n="31">
          <seg n="a">بو داملاردا چوخلى جزیخ آتموشام</seg>
          <seg n="b">اوشاقلارین آشیقلارین اوتموشام</seg>
        </l>
        <l n="32">
          <seg n="a">اوشاق نجه هیچ زادینان شاد اولار</seg>
          <seg n="b">ایندى بیزیم غمى دوتمور دنیالار</seg>
        </l>
        <l n="33">
          <seg n="a"> مکتب قالیر اوشاقلار درس آلیللار</seg>
          <seg n="b">هى یازیللار هی پوزیلار، یالیللار</seg>
        </l>
        <l n="34">
          <seg n="a">آما بیزیم یولداشلاردان قالان یوخ</seg>
          <seg n="b">بونلاردان بیر بیزى یادا سالان یوخ</seg>
        </l>
        <l n="35">
          <seg n="a">بیر وقتینده بو مکتب پرگار ایدى</seg>
          <seg n="b">بیر مسیب، بیر ممدسن وار ایدى</seg>
        </l>
        <l n="36">
          <seg n="a">آخود بیزله اویناماغا گدردى</seg>
          <seg n="b">ازى بیزه اویناماق ارگدردى</seg>
        </l>
        <l n="37">
          <seg n="a">ددیم بالام او مدسن نولوپدى</seg>
          <seg n="b">معلوم اولدى طفیل جوان الوپدى</seg>
        </l>
        <l n="38">
          <seg n="a">بیر یل اسیر باخیرسان ممدسن یوق</seg>
          <seg n="b">بو کتده بیر بورون قانین کسن یوق</seg>
        </l>
        <l n="39">
          <seg n="a">دیم دیون مسیبه نه گلدى</seg>
          <seg n="b">غلام گوردوم آغلار گوزیله گلدى</seg>
        </l>
        <l n="40">
          <seg n="a">دیم یازیق بیزله حاصیل بلنلر</seg>
          <seg n="b">بیتمینده آجلارینان النلر</seg>
        </l>
        <l n="41">
          <seg n="a">بو مکتبده شعرین شهدین دادمشام</seg>
          <seg n="b">آخوندون آغزیندان قاپوپ اودمشام</seg>
        </l>
        <l n="42">
          <seg n="a">باشیم آغریر دیوپ قاچوپ گتمیشم</seg>
          <seg n="b">باخچالاردا گدوب گوزدن ایتمیشم</seg>
        </l>
        <l n="43">
          <seg n="a">آزاد اولاندا مکتبدن چخاردیخ</seg>
          <seg n="b">هجوم وروپ بیرىبرین سخاردیخ</seg>
        </l>
        <l n="44">
          <seg n="a">اوشاق دیمه ایپین قرمیش دانا ده</seg>
          <seg n="b">بیر دانادا دیمه، اللى دانا ده</seg>
        </l>
        <l n="45">
          <seg n="a">ملک نیاز ایتگین گدوپ یوخ اولوب</seg>
          <seg n="b">امیر اصلان سکته ایله یخیلوب</seg>
        </l>
        <l n="46">
          <seg n="a">چرک غمى چیخوپ خلقین آینا</seg>
          <seg n="b">هر کس قالوب اوز جاننین هاینا</seg>
        </l>
        <l n="47">
          <seg n="a">کتدى یازیق چراغ تاپیر یاندیرا</seg>
          <seg n="b">گوروم سیزون برقوز قالسین آندیرا</seg>
        </l>
        <l n="48">
          <seg n="a">نه دور آخر بو ملتین گناهى</seg>
          <seg n="b">دوتسون سیزى گوروم مظلوملار آهى</seg>
        </l>
        <l n="49">
          <seg n="a">هر نه آلیر بها وریر قیمتى</seg>
          <seg n="b">اوجوز فقط اکینچینون زحمتى</seg>
        </l>
        <l n="50">
          <seg n="a">کند اوشاقى گدیر یولدا ایشلیه</seg>
          <seg n="b">اوردا بلکه قندى تاپا دیشلیه</seg>
        </l>
        <l n="51">
          <seg n="a">کتدى گلین کیمى دنیانى بزر</seg>
          <seg n="b">اوز عورتى یاماخ یاماغه دوزر</seg>
        </l>
        <l n="52">
          <seg n="a">ایندیده وار چرشابلارى آلباخدى</seg>
          <seg n="b">اوشاقلارون قیش پاچاسى چیلپاخدى</seg>
        </l>
        <l n="53">
          <seg n="a"> بو باخچادا آش ترهسى اکردیک</seg>
          <seg n="b">هى سو آچوپ کردیه گوز تیکردیک</seg>
        </l>
        <l n="54">
          <seg n="a">فینقلشلار قاشیقلاردان آسلانى</seg>
          <seg n="b">یاغلى دیسم قورى آغزون ایسلانى</seg>
        </l>
        <l n="55">
          <seg n="a"> بو دشلرده قوزیلارى یایاردیخ</seg>
          <seg n="b">آخماسونلار اولدوز تکین سایاردیخ</seg>
        </l>
        <l n="56">
          <seg n="a">قوش قوان دا ایله بیل که قاباندى</seg>
          <seg n="b">قورد اوزاقدان دیر بس که چوباندى</seg>
        </l>
        <l n="57">
          <seg n="a"> خانم ننم ناخوش اولان ایلیدى</seg>
          <seg n="b">قیش وار ایکن کولکیدى، یلیدى</seg>
        </l>
        <l n="58">
          <seg n="a">یوک یاپنى هى چاتیردوخ که گداخ</seg>
          <seg n="b">سل چیمخروب، مجبوریدوخ قیداخ</seg>
        </l>
        <l n="59">
          <seg n="a">نیسان دوشدى بیزده دوشدوخ یاغیشا</seg>
          <seg n="b">کیم باجارا سیللریله بوغیشا</seg>
        </l>
        <l n="60">
          <seg n="a">بالا کیشى فایطونچمیز گلمیشدى</seg>
          <seg n="b">امامیه قهوهسنده قالمیشدى</seg>
        </l>
        <l n="61">
          <seg n="a">بو زمیده گدوپ گوزدن اتردیک</seg>
          <seg n="b">تونقال قوروپ سوتوللرى اتردیک</seg>
        </l>
        <l n="62">
          <seg n="a">ایلده گولسون، مرادینه یتیشسون</seg>
          <seg n="b">یورکلرین یارالارى بیتیشسون</seg>
        </l>
        <l n="63">
          <seg n="a">خلورچیلر بوردا خلور داشیردى</seg>
          <seg n="b">بو کولوکدن الاخلار دیرماشیردى</seg>
        </l>
        <l n="64">
          <seg n="a">هر ایش دییدون هر کیمه گورردى</seg>
          <seg n="b">جان درمانى ایستییدون ورردى</seg>
        </l>
        <l n="65">
          <seg n="a">ایندى بشر آج قورد تکین اودوخوپ</seg>
          <seg n="b">چومبلنتى گوز قجردوپ دوروخوپ</seg>
        </l>
        <l n="66">
          <seg n="a">توکولسنلر اونون لشین یرتسونلار</seg>
          <seg n="b">هره بر دیش انسه سیندن قیرتسونلار</seg>
        </l>
        <l n="67">
          <seg n="a">حیدربابا سنده دفینه لر وار</seg>
          <seg n="b">داغلار ودیعه سى، خزینه لر وار</seg>
        </l>
        <l n="68">
          <seg n="a">بو سینه لر داغلاریله دانشور</seg>
          <seg n="b">داغلار کیمى گوگلریله قونشور</seg>
        </l>
        <l n="69">
          <seg n="a">گور هاردان من سنه سالدیم نفسى</seg>
          <seg n="b">ددیم قیتر، سال عالمه بو سسى</seg>
        </l>
        <l n="70">
          <seg n="a">سان که قاناد وردون یله نسیمه</seg>
          <seg n="b">هر طرفدن سس وردیلر سسیمه</seg>
        </l>
        <l n="71">
          <seg n="a">حیدربابا سنى وطن بیلمیشدیم</seg>
          <seg n="b">وطن دیوب باش گتوروپ گلمیشدیم</seg>
        </l>
        <l n="72">
          <seg n="a">حلبو که لاپ غملى غربت سندیمیش</seg>
          <seg n="b">قارا زندان، آجى شربت سندیمیش</seg>
        </l>
        <l n="73">
          <seg n="a">.کیم قالدى که بذه بوغون بورمادى</seg>
          <seg n="b">آتدان آتدان بزه کلک قورمادى</seg>
        </l>
        <l n="74">
          <seg n="a">شیطانلارى قوجاقلیوب گزدیر سیز</seg>
          <seg n="b">انسانلارى ایاخلیوب ازدیر سیز</seg>
        </l>
        <l n="75">
          <seg n="a">دووار اوجالدى گون بیزه دوشمدى</seg>
          <seg n="b">زندان قارالدى گؤز گؤزى سشمدى</seg>
        </l>
        <l n="76">
          <seg n="a">سلده باسدى اموز دولوپ گؤل اولدى</seg>
          <seg n="b">چوق یازیغین اوى چونوپ چول اولدى</seg>
        </l>
        <l n="77">
          <seg n="a">اول باشى مندن استقبال اتدیز</seg>
          <seg n="b">سونان چونوب ایشیمده اخلال اتدیز</seg>
        </l>
        <l n="78">
          <seg n="a">عیبى یوقدور کچر گدر عمردور</seg>
          <seg n="b">قیشدا چیخار، یوزى قارا کمردور</seg>
        </l>
        <l n="79">
          <seg n="a">منیم یولوم محبت جاده سیدى</seg>
          <seg n="b">سؤن سؤزلریم حقون اراده سیدى</seg>
        </l>
        <l n="80">
          <seg n="a">یوخسا منده بیر کسیله غرض یوخ</seg>
          <seg n="b">سیاست آدلى منده بیر مرض یوخ</seg>
        </l>
        <l n="81">
          <seg n="a">حق نه دیور؟ کفره قارشى گتمیوز</seg>
          <seg n="b">نوردان چیقوب ظلمات ایچره ایتمیوز</seg>
        </l>
        <l n="82">
          <seg n="a">گوردوزده که اولمادى کفرین دیبى</seg>
          <seg n="b">پولدا ورسه آلماغا تیکمیش جیبى</seg>
        </l>
        <l n="83">
          <seg n="a">شیطان بیزیم قیبله میزى چوندریب</seg>
          <seg n="b">آلله دین یولدان بیزى دوندریب</seg>
        </l>
        <l n="84">
          <seg n="a">منت قویور که آرخوز نهر اولوب</seg>
          <seg n="b">بیز گوروروک سولار بیزه زهر اولوب</seg>
        </l>
        <l n="85">
          <seg n="a">حیدربابا گلیلیخ دان نه چیخار</seg>
          <seg n="b">ظلمون اوین صبر و تحمل ییخار</seg>
        </l>
        <l n="86">
          <seg n="a">گل قیداخ چیقاق آقا دوزینه</seg>
          <seg n="b">گچاق گنه محبتون سوزینه</seg>
        </l>
        <l n="87">
          <seg n="a"> دینه اوشاق بیربریله سازاولسون</seg>
          <seg n="b">بلکه بو قیش بیرده چونوب یاز اولسون</seg>
        </l>
        <l n="88">
          <seg n="a">بیزده باخوب فرحلنوب بیر اوچاق</seg>
          <seg n="b">سنیق سالخاخ قانادلارى بیر آچاق</seg>
        </l>
        <l n="89">
          <seg n="a">بو باخچادان آلچالارى درردیک</seg>
          <seg n="b">قیش آدینا چیقوب دامدا سرردیک</seg>
        </l>
        <l n="90">
          <seg n="a">قیش زومارین یایدا ییوب دویاردیق</seg>
          <seg n="b">بیر کلى ده منت خلقه قویاردیق</seg>
        </l>
        <l n="91">
          <seg n="a">اولر قالیر اوصاحبى یوق اوزى</seg>
          <seg n="b">اجاقلارین آنجاق ایشیلدیر گوزى</seg>
        </l>
        <l n="92">
          <seg n="a">بیزدنده بیر سوز قالاجاق آى آمان</seg>
          <seg n="b">کیملر بیزدن سالاجاق آى آمان</seg>
        </l>
        <l n="93">
          <seg n="a"> بیزدن سورا کرسیلرین تویندا</seg>
          <seg n="b">کندین ناغیلاریندا سوز سویندا</seg>
        </l>
        <l n="94">
          <seg n="a">حیدربابا ازین قاتار سوزلره</seg>
          <seg n="b">عیشقى کیمى خمار ورر گوزلره</seg>
        </l>
        <l n="95">
          <seg n="a">عاشیق دیر بیر نازلی یار واریمیش</seg>
          <seg n="b">عشقیندن اودلانوب یانار واریمیش</seg>
        </l>
        <l n="96">
          <seg n="a">اودلار سونوب اونون اودى سونمیوپ</seg>
          <seg n="b">فلک چونوپ اونون چرخى چونمیوپ</seg>
        </l>
        <l n="97">
          <seg n="a">حیدربابا آلچاقلارون کشگ اولسون</seg>
          <seg n="b">بیزدن سورا قالانلارا عشق اولسون</seg>
        </l>
        <l n="98">
          <seg n="a">اولادیمیز مذهبنى دانماسون</seg>
          <seg n="b">هر ایچى بوش سوزلره آلدنماسون</seg>
        </l>
      </div>
