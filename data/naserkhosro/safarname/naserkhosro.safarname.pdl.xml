      <div n="urn:cts:perslit:naserkhosro.safarname.pdl" type="edition" xml:lang="per">
        <div n="100" subtype="page" type="textpart">
          <l n="1">
            <seg n="a">رنج و عنای جهان اگرچه درازست</seg>
            <seg n="b">با بد و با نیک بی گمان به سرآید</seg>
          </l>
          <l n="2">
            <seg n="a">چون مسافر زبهر ماست شب و روز</seg>
            <seg n="b">هرچه یکی رفت بر اثر دگر آید</seg>
          </l>
          <l n="3">
            <seg n="a">ما سفر برگذشتی گذرانیم</seg>
            <seg n="b">تا سفرناگذشتنی به درآید</seg>
          </l>
        </div>
      </div>
