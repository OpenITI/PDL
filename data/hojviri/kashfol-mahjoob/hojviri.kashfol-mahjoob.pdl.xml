          <div n="8" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">شَرِبتُ الرّاحَ کَأْساً بَعْدَ کأسٍ</seg>
              <seg n="b">فما نَفِدَ الشَّرابُ وَما رَوِیتُ</seg>
            </l>
            <l n="2">
              <seg n="a">إذا طَلَعَ الصَّباحُ بِنَجْمِ راحٍ</seg>
              <seg n="b">تَساوی فیه سَکْرانُ وَصاحِ</seg>
            </l>
          </div>
          <div n="9" subtype="page" type="textpart"/>
          <div n="10" subtype="page" type="textpart"/>
          <div n="11" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">غِبْتُ عَنّی فَما اُحِسُّ بِنَفْسی</seg>
              <seg n="b">وَتَلاشَتْ صِفَاتِیَ الموصوفة</seg>
            </l>
            <l n="2">
              <seg n="a">فأنا الیومَ غائبٌ عَنْ جَمیعٍ</seg>
              <seg n="b">لیسَ الّا العِبارةُ الْمَلْهُوفة</seg>
            </l>
          </div>
          <div n="12" subtype="page" type="textpart"/>
          <div n="13" subtype="page" type="textpart"/>
          <div n="14" subtype="page" type="textpart"/>
          <div n="15" subtype="page" type="textpart"/>
          <div n="16" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">مَنَّنْتَنی الإحْسانَ دَعْ إحْسانَک</seg>
              <seg n="b">اُترُکْ بِخَشْوِ اللّهِ باذَنْجانَک</seg>
            </l>
          </div>
          <div n="17" subtype="page" type="textpart"/>
          <div n="18" subtype="page" type="textpart"/>
          <div n="19" subtype="page" type="textpart"/>
          <div n="20" subtype="page" type="textpart"/>
          <div n="21" subtype="page" type="textpart"/>
          <div n="22" subtype="page" type="textpart"/>
          <div n="23" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">ذَهَبٌ أیْنَما ذَهَبْنا و دُرٌّ</seg>
              <seg n="b">حیثُ دُرْنا، وَفِضَّةٌ فی الفَضاءِ</seg>
            </l>
          </div>
          <div n="24" subtype="page" type="textpart"/>
          <div n="25" subtype="page" type="textpart"/>
          <div n="26" subtype="page" type="textpart"/>
          <div n="27" subtype="page" type="textpart"/>
          <div n="28" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">فَنَیْتُ فنائی بفَقدِ هوائی</seg>
              <seg n="b">فصارَ هَوائی فی الامورِ هَواک</seg>
            </l>
            <l n="2">
              <seg n="a">وَطاحَ مقامی و الرُّسومُ کِلاهُما</seg>
              <seg n="b">فلستُ أری فِی الوَقْتِ قُرباً و لابُعدا</seg>
            </l>
            <l n="3">
              <seg n="a">فَنَیْتُ به عَنّی فَنازَلَنی بِه</seg>
              <seg n="b">فهذا ظهورُ الْحَقِّ عند الفَنا قَصْدا</seg>
            </l>
          </div>
          <div n="29" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">لاکُنْتُ إنْ کُنْتُ أدری</seg>
              <seg n="b">کَیْفَ السَّبیلُ اِلَیْک</seg>
            </l>
            <l n="2">
              <seg n="a">أفْنَیتَنی عَنْ جَمیعی</seg>
              <seg n="b">فَصِرتُ ابکی علیک</seg>
            </l>
            <l n="3">
              <seg n="a">فَفی فَنائی فَنا فنائی</seg>
              <seg n="b">و فی فنائی وجَدتُ أنتَ</seg>
            </l>
            <l n="4">
              <seg n="a">مَحَوْتَ رَسْمی و رَسْمَ جسْمی</seg>
              <seg n="b">سألتَ عنّی فقُلتُ انتَ</seg>
            </l>
          </div>
          <div n="30" subtype="page" type="textpart"/>
          <div n="31" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">ولی فُؤادٌ و أنْت مالِکُهُ</seg>
              <seg n="b">بلا شریکٍ فَکَیْفَ یَنْقَسِمُ</seg>
            </l>
            <l n="2">
              <seg n="a">مَنْ لَمْ یَکُنْ بِکَ فانِیاً عَنْ نَفسِه</seg>
              <seg n="b">و عَنِ الْهَوی و الأُنْسِ بِالأحبابِ</seg>
            </l>
            <l n="3">
              <seg n="a">فکأنَّه بینَ المراتبِ واقِفٌ</seg>
              <seg n="b">لِمَنالِ حَظٍّ أو لِحُسْنِ مآبِ</seg>
            </l>
            <l n="4">
              <seg n="a">تقشّعَ غَیْمُ الهَجْرِ عَنْ قَمرِ الحُبِّ</seg>
              <seg n="b">وأسْفَرَ نُورُ الصُّبْحِ عَنْ ظلمةِ العَنْبِ</seg>
            </l>
          </div>
          <div n="32" subtype="page" type="textpart"/>
          <div n="33" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">قد تَحَقَّقْتَ بسِرّی فَتَناجاکَ لِسانی</seg>
              <seg n="b">وَاجْتَمَعْنا لمعانٍ وَافْتَرَقنا لِمعانی</seg>
            </l>
            <l n="2">
              <seg n="a">فَلَئِنْ غیّبکَ التّعظیمُ عَنْ لحظِ عیانی</seg>
              <seg n="b">فَلقَدْ صَیَّرکَ الوجدُ من الاحشاءِ دانی</seg>
            </l>
          </div>
          <div n="34" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">لبّیکَ لبّیک یا سَیِّدی و مولائی</seg>
              <seg n="b">لبّیکَ لبّیکَ یا قَصْدی و مَعْنائی</seg>
            </l>
            <l n="2">
              <seg n="a">یا عینَ عینِ وجودی یا مُنا هِمَمی</seg>
              <seg n="b">یا منطقی و اشاراتی و انبائی</seg>
            </l>
            <l n="3">
              <seg n="a">یا کُلَّ کلّی و یا سمعی و یا بصری</seg>
              <seg n="b">یا جُملتی و تباعیضی و أجزائی</seg>
            </l>
          </div>
          <div n="35" subtype="page" type="textpart"/>
          <div n="36" subtype="page" type="textpart"/>
          <div n="37" subtype="page" type="textpart"/>
          <div n="38" subtype="page" type="textpart"/>
          <div n="39" subtype="page" type="textpart"/>
          <div n="40" subtype="page" type="textpart"/>
          <div n="41" subtype="page" type="textpart"/>
          <div n="42" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">ففی کلِّ شیءٍ لَهُ ایةً</seg>
              <seg n="b">تَدُلُّ عَلی أنَّه واحدُ</seg>
            </l>
          </div>
          <div n="43" subtype="page" type="textpart"/>
          <div n="44" subtype="page" type="textpart"/>
          <div n="45" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab16" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">إذا قُلْتُ ما أذْنَبْتُ قالَتْ مُجیبَةً</seg>
              <seg n="b">حیاتُکَ ذَنْبٌ لایُقاسُ به ذَنْبُ</seg>
            </l>
          </div>
          <div n="2" subtype="page" type="textpart"/>
          <div n="3" subtype="page" type="textpart"/>
          <div n="4" subtype="page" type="textpart"/>
          <div n="5" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab17" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">یا منْ سَقامُ جُفونِه</seg>
              <seg n="b">لِسَقامِ عاشِقه طبیبُ</seg>
            </l>
            <l n="2">
              <seg n="a">حُزتُ المودّةَ فاستوی</seg>
              <seg n="b">عندی حضورُک و المغیبُ</seg>
            </l>
            <l n="3">
              <seg n="a">إنْ شِئتِ جودی و ان ما شئتِ فامتَنِعی</seg>
              <seg n="b">کلاهُما منکِ منسوبٌ الی الکرمِ</seg>
            </l>
            <l n="4">
              <seg n="a">إذا ما تَمنّی النّاسُ رَوْحاً و راحةً</seg>
              <seg n="b">تمنّیتُ أنْ ألقاکِ یا عزّ خالیا</seg>
            </l>
            <l n="5">
              <seg n="a">القَلْبُ یَحْسُدُ عَیْنی لَذَّةَ النَّظَرِ</seg>
              <seg n="b">و العَیْنُ تَحْسُدُ قلبی لَذَّةَ الفِکَرِ</seg>
            </l>
          </div>
          <div n="2" subtype="page" type="textpart"/>
          <div n="3" subtype="page" type="textpart"/>
          <div n="4" subtype="page" type="textpart"/>
          <div n="5" subtype="page" type="textpart"/>
          <div n="6" subtype="page" type="textpart"/>
          <div n="7" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">فما وَجَبَتْ علیَّ زکوةُ مالٍ</seg>
              <seg n="b">وهل تَجِبُ الزَّکوةُ علی جوادٍ</seg>
            </l>
          </div>
          <div n="8" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab18" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
          <div n="2" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab19" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
          <div n="2" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">واصْبَحْتُ یَوْمَ النَّفْرِ و العیسُ تَرْحَلُ</seg>
              <seg n="b">وَکانَ حُدَی الحادی بِنَا و هُوَ مُعْجِلُ</seg>
            </l>
            <l n="2">
              <seg n="a">اُسائِلُ عَنْ سلمی فَهَلْ مِنْ مُخَبِّرٍ</seg>
              <seg n="b">بسانَّ له علماً بها أیْنَ تنزلُ</seg>
            </l>
            <l n="3">
              <seg n="a">لَقَد اَفْسَدَتْ حجّی و نُسْکی و عُمرتی</seg>
              <seg n="b">و فی البَیْنِ لی شُغْلٌ عَنِ الحجّ مُشْغِلُ</seg>
            </l>
            <l n="4">
              <seg n="a">سأرْجِعُ مِنْ عامی لحَجّةِ قابلٍ</seg>
              <seg n="b">فانّ الّذی قد کان لایُتَقبَّلُ</seg>
            </l>
          </div>
        </div>
        <div n="kmbab20" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">إنّی لأحْسُدُ ناظِریَّ عَلَیْکا</seg>
              <seg n="b">فأغُضُّ طرفِیَ إذ نَظَرْتُ اِلیْکا</seg>
            </l>
            <l n="2">
              <seg n="a">تَمنَّیْتُ مَنْ أهوی فلمّا رایتُه</seg>
              <seg n="b">بَهِتُّ فلَمْ أمْلِکْ لساناً ولا طَرْفاً</seg>
            </l>
          </div>
          <div n="2" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab21" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab22" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
          <div n="2" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">اذا نَطَقَتْ جاءَتْ بکلّ مَلاحةٍ</seg>
              <seg n="b">و ان سکتَتْ جاءَتْ بکلّ ملیحِ</seg>
            </l>
          </div>
        </div>
        <div n="kmbab23" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab24" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab25" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab26" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab27" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">وَإنّی لَأَسْتَنْعِسُ و ما بی نَعْسَةٌ</seg>
              <seg n="b">لَعلَّ خَیالاً مِنْکِ یلقی خیالیا</seg>
            </l>
          </div>
        </div>
        <div n="kmbab28" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">لِسانُ الْحالِ أفْصَحُ مِنْ لسانی</seg>
              <seg n="b">وصَمْتی عَنْ سؤالِکَ تَرْجُمانی</seg>
            </l>
          </div>
        </div>
        <div n="kmbab29" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab30" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
          <div n="2" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">فکُلُّ امریٍ یُولِی الجمیلَ مُحبَّبٌ</seg>
              <seg n="b">وکلُّ مکانٍ یُنْبِتُ العِزَّ طَیِّبُ</seg>
            </l>
          </div>
          <div n="3" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab31" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
          <div n="2" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab32" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">ألاکلُّ شیءٍ ماخَلَا اللّهَ باطلٌ</seg>
              <seg n="b">وکلُّ نعیمٍ لامَحالَةَ زائِلُ</seg>
            </l>
          </div>
        </div>
        <div n="kmbab33" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab34" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
          <div n="2" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab35" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">ألا فَاسْقِنی خَمْراً وقُلْ لی هِیَ الخَمْرُ</seg>
              <seg n="b">وَلا تَسْقِنی سِرّاً إذا أمْکَنَ الْجَهْرُ</seg>
            </l>
          </div>
        </div>
        <div n="kmbab36" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
          <div n="2" subtype="page" type="textpart">
            <l n="1">
              <seg n="a">فی سبیلِ اللّهِ ودٌّ</seg>
              <seg n="b">کانَ مِنّی لک یُبْذَل</seg>
            </l>
            <l n="2">
              <seg n="a">کلُّ یومٍ تتلوَّن</seg>
              <seg n="b">غیرُ هذا بکَ أجْمَل</seg>
            </l>
            <l n="3">
              <seg n="a">مُنیً إن تکن حقّاً تکُنْ احسنَ المنی</seg>
              <seg n="b">وَإلّا فَقَدْ عِشْنا بها زَمَناً رَغْدَا</seg>
            </l>
            <l n="4">
              <seg n="a">أمُدُّ کفّی بِالخُضُوعِ</seg>
              <seg n="b">إلَی الّذی جادَ بِالصَّنیع</seg>
            </l>
            <l n="5">
              <seg n="a">صحَّ عندَ النّاسِ أنّی عاشِقٌ</seg>
              <seg n="b">غیرَ أنْ لَمْ یَعْلَمُوا عِشْقی لِمَنْ</seg>
            </l>
            <l n="6">
              <seg n="a">ما فی الْإنسانِ شیءٌ حسَنٌ</seg>
              <seg n="b">إلّا وأحسنُ منه صوتٌ حسنُ</seg>
            </l>
            <l n="7">
              <seg n="a">واللّهِ ما طَلَعَتْ شمسٌ وَما غَرَبَتْ</seg>
              <seg n="b">إلّا و أنْتَ مُنی قلبی وَوَسْواسی</seg>
            </l>
            <l n="8">
              <seg n="a">وَلا تَنَفَّسْتُ مَحْزُوناً وَلا فَرِحاً</seg>
              <seg n="b">إلّا و ذِکْرُکَ مَقْرونٌ بأنفاسی</seg>
            </l>
            <l n="9">
              <seg n="a">ولاجَلَسْتُ إلی قَوْمٍ اُحَدِّثُهم</seg>
              <seg n="b">إلّا و أنْتَ حَدیثی بینَ جُلّاسی</seg>
            </l>
            <l n="10">
              <seg n="a">ولاهمَمْتُ بِشُربِ الماء مِنْ عَطَشٍ</seg>
              <seg n="b">إلّا رأیتُ خیالاً مِنکَ فی الْکاسِ</seg>
            </l>
          </div>
          <div n="3" subtype="page" type="textpart"/>
        </div>
        <div n="kmbab37" subtype="chapter" type="textpart">
          <div n="1" subtype="page" type="textpart"/>
        </div>
